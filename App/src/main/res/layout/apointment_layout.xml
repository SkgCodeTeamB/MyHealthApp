<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prescription_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="@drawable/border"
    app:cardBackgroundColor="#FFFFFF"


    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_Speciality"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:textSize="15sp"
            android:text=" Speciallity: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_Doctor"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:textSize="15sp"
            android:text=" Doctor: "
            app:layout_constraintLeft_toRightOf="@+id/item_Speciality"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/item_SpecialityText_field"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_Speciality" />


        <TextView
            android:id="@+id/item_DoctorText_field"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/item_SpecialityText_field"
            app:layout_constraintTop_toBottomOf="@id/item_Doctor" />


        <TextView
            android:id="@+id/item_Date_field"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_SpecialityText_field" />

        <TextView
            android:id="@+id/item_Time_field"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/item_SpecialityText_field"
            app:layout_constraintTop_toBottomOf="@id/item_DoctorText_field" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>