<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.PersonalDataFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragments.PersonalDataFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/image_PersonalData"
            android:background="@drawable/round_corner"
            android:layout_marginStart="4dp"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp" />



        <TextView
            android:id="@+id/textView_PersonalData"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-32dp"
            android:text="Personal Data"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_border"
            android:layout_width="364dp"
            android:layout_height="426dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangletransparent"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView_Name"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-420dp"
            android:text="Name:"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_Surname"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="-20dp"
            android:text="Surname:"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_Name"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="N"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_Surname"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="-20dp"
            android:text="S"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView_Birthday"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Birthday:"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_Birthday"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="B"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_AMKA"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="AMKA:"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_AMKA"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="A"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_BloodType"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Blood Type:"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_BlooType"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="B"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_FamilyDoctor"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Family Doctor:"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_FamilyDoctor"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="F"
            android:textColor="#000000"
            android:textSize="16sp" />




    </LinearLayout>


</ScrollView>
